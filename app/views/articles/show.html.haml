%h1= @article.title
%p= @article.content

.btn-group
  = link_to "Kembali", root_path, class: "btn btn-default"
  - if user_signed_in?
    = link_to "Edit", edit_article_path(@article), class: "btn btn-default"
    = link_to "Hapus", article_path(@article), method: :delete, data: { confirm: "Apakah kamu yakin?" }, class: "btn btn-default"
